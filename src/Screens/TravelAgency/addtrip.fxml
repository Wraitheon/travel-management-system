<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.cell.TextFieldListCell?>

<VBox alignment="CENTER" stylesheets="@stylesTA.css" fx:id="root" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AddTripController" >

    

    <Label text="Trip Planner" style="-fx-font-size: 20; -fx-font-weight: bold;" />

    <!-- Destination Dropdown -->
    <HBox spacing="5">
        <Label text="Select Destination:" />
        <ComboBox fx:id="destinationComboBox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Destination 1" />
                    <String fx:value="Destination 2" />
                    <String fx:value="Destination 3" />
                </FXCollections>
            </items>
        </ComboBox>
    </HBox>

    <!-- Trip Date -->
    <HBox spacing="5">
        <Label text="Select Trip Date:" />
        <DatePicker fx:id="tripDatePicker" />
    </HBox>

    <!-- Number of Days -->
    <HBox spacing="5">
        <Label text="Number of Days:" />
        <TextField fx:id="numDaysTextField" onKeyTyped="#handleDigitInput" />
    </HBox>

    <!-- Price per Head -->
    <HBox spacing="5">
        <Label text="Price per Head:" />
        <TextField fx:id="priceTextField" />
    </HBox>

    <!-- Itinerary Items -->
    <VBox spacing="5">
        <Label text="Itinerary Items:" />
        <ListView fx:id="itineraryListView" editable="true">
            <cellFactory>
                <TextFieldListCell />
            </cellFactory>
        </ListView>
    </VBox>

    <!-- Add Itinerary Item Button -->
    <Button text="Add Itinerary Item" onAction="#handleAddItineraryItem" />

</VBox>
