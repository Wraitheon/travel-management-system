<VBox alignment="CENTER" spacing="10" stylesheets="@stylesTourist.css" fx:id="root" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.TouristDashBoardController">

   <VBox spacing="20" alignment="CENTER" id="root">
